@model IEnumerable<CarMVCClasses.ApiSalesperson>

@{
    ViewBag.Title = "Salespersons";
}
    <body style="background-color:antiquewhite;">
        <h2>Salespersons</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        
        @foreach (var item in Model)
        {
            <div class="card border- mb-3" style="max-width: 40rem; border-style: solid; border-width: 3px;background-image: linear-gradient(-50deg,#9c8c72,#b3a898,#ccc1ad,#d4cec5);">

                <div style=" margin:10px" class="card-header">@Html.DisplayFor(modelItem => item.SalespersonId)</div> <!--ID-->

                <div style=" margin:10px" class="card-body">

                    <h5 class="card-title"> @Html.DisplayFor(modelItem => item.SalespersonFirstName) @Html.DisplayFor(modelItem => item.SalespersonLastName) </h5> <!--First and Last Name-->

                    <p class="card-text">Phone Number Id: @Html.DisplayFor(modelItem => item.SalespersonPhoneNumber)</p>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.SalespersonAddress)</p>
                    <p class="card-text">Location ID: @Html.DisplayFor(modelItem => item.LocationId)</p>

                    <p class="card-text">
                        @Html.ActionLink("Edit", "Edit", new { id = item.SalespersonId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.SalespersonId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.SalespersonId })
                    </p>


                </div>

            </div>
            <br />
        }
    </body>