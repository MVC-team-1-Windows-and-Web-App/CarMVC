@model IEnumerable<CarMVCClasses.ApiPhone>

@{
    ViewBag.Title = "Phones";
}
    <body style="background-color:antiquewhite;">
        <h2>Phones</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        
        @foreach (var item in Model)
        {
            <div class="card border- mb-3" style="max-width: 40rem; border-style: solid; border-width: 3px;background-image: linear-gradient(-50deg,#9c8c72,#b3a898,#ccc1ad,#d4cec5);">

                <div style=" margin:10px" class="card-header">@Html.DisplayFor(modelItem => item.PhoneId)</div> <!--ID-->

                <div style=" margin:10px" class="card-body">

                    <h5 class="card-title"> @Html.DisplayFor(modelItem => item.PhoneNumber) </h5> 

                 
                    <p class="card-text">
                        @Html.ActionLink("Edit", "Edit", new { id = item.PhoneId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.PhoneId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PhoneId })
                    </p>


                </div>

            </div>
            <br />
        }
    </body>