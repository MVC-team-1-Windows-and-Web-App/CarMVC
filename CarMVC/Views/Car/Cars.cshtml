@model IEnumerable<CarMVCClasses.ApiCar>

@{
    ViewBag.Title = "Cars";
}
    <body style="background-color:antiquewhite;">
        <h2>Cars</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
       
        @foreach (var item in Model)
        {
            <div class="card border- mb-3" style="max-width: 40rem; border-style: solid; border-width: 3px;background-image: linear-gradient(-50deg,#9c8c72,#b3a898,#ccc1ad,#d4cec5);">

                <div style=" margin:10px" class="card-header"> @Html.DisplayFor(modelItem => item.CarId)</div> <!--ID-->

                <div style=" margin:10px" class="card-body">

                    <h5 class="card-title"> @Html.DisplayFor(modelItem => item.CarColor) @Html.DisplayFor(modelItem => item.CarType) @Html.DisplayFor(modelItem => item.CarModel)</h5> <!--Color+Type-->

                   
                    <p class="card-text">@Html.DisplayFor(modelItem => item.CarPrice)</p>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.CarCommission)</p>
                    <p class="card-text">
                        @Html.ActionLink("Edit", "Edit", new { id = item.CarId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CarId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CarId })
                    </p>


                </div>

            </div>
            <br />
        }
    </body>